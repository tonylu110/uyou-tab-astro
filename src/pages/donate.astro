---
import Layout from '../layouts/Layout.astro';
import wechatImg from '../assets/images/wechatpay.png'
import alipayImg from '../assets/images/alipay.png'
---

<Layout title="捐赠">
	<main class="flex justify-center">
		<div class="flex items-center justify-center mt-10 flex-gap-10 md:flex-row flex-col md:mb-0 mb-40">
			<div class="shadow-xl shadow-black/20 p-3 rounded-5">
				<img 
					src={wechatImg} 
					alt=""
					class="md:h-170 md:w-auto w-70 rounded-3"
				>
			</div>
			<div class="shadow-xl shadow-black/20 p-3 rounded-5">
				<img 
					src={alipayImg} 
					alt=""
					class="md:h-170 md:w-auto w-70 rounded-3"
				>
			</div>
		</div>
		<div class="shadow-xl shadow-black/20 p-y-5 p-x-10 rounded-10 fixed bottom-5 font-bold text-8 bg-white">感谢你的捐赠</div>
	</main>
</Layout>